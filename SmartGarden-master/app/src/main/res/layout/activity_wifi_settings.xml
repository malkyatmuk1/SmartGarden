<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Start"
    android:orientation="vertical"
    android:gravity="fill_vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="top"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:src="@drawable/left_arrow_aqua"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="40dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Start"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wifi settings"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:fontFamily="@font/tt_corals_thin_demo"
            android:textColor="@color/aqua"
            android:textSize="30dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal" />
        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="@drawable/gradient_blue_green"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/noMatching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/titillium_weblight"
            android:visibility="visible"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/wifiId"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittext"
            android:hint="Wifi-ssid"
            android:textColorHint="@color/blue"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:paddingLeft="30dp"
            android:fontFamily="@font/titillium_weblight"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:nextFocusDown="@+id/wifiPass"
            />
        <EditText
            android:id="@+id/wifiPass"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittext"
            android:hint="Wifi-pass"
            android:inputType="textPassword"
            android:textColorHint="@color/blue"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:paddingLeft="30dp"
            android:fontFamily="@font/titillium_weblight"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:nextFocusDown="@+id/username"
            />
        <EditText
            android:id="@+id/username"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittext"
            android:hint="Username"
            android:textColorHint="@color/blue"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:paddingLeft="30dp"
            android:fontFamily="@font/titillium_weblight"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:nextFocusDown="@+id/password"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittext"
            android:hint="Password"
            android:textColorHint="@color/blue"
            android:inputType="textPassword"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:paddingLeft="30dp"
            android:fontFamily="@font/titillium_weblight"
            android:layout_marginTop="10dp" />


        <Button
            android:id="@+id/applyButton"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:paddingRight="20dp"
            android:text="Apply"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textAlignment="gravity"
            android:textAllCaps="false" />
    </LinearLayout>
</LinearLayout>