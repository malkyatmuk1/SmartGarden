<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="fill_vertical"
        android:id="@+id/activity_pouring_info"
        tools:context=".Pouring_Info"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="top"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">
                <ImageButton
                    android:id="@+id/backButtonPouringInfo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="40dp"
                    android:background="@color/white"
                    android:src="@drawable/left_arrow_aqua" />

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="center_vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/tt_corals_thin_demo"
                android:gravity="center_horizontal"
                android:text="Pouring information"
                android:textAllCaps="true"
                android:textColor="@color/aqua"
                android:textSize="30dp"
                android:textStyle="bold" />
            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@drawable/gradient_blue_green"
                android:layout_gravity="center_horizontal"

                android:layout_marginBottom="20dp"
                />

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/plant"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/plantPouringTimes"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext"
                    android:textColor="@color/blue"
                    android:textSize="17dp"
                    android:textColorHint="@color/blue"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/titleNextPouring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:textColor="@color/blue"
                    android:textSize="17dp"
                    android:hint="Next Pouring"
                    android:textColorHint="@color/blue"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/titleUsedWater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:textColor="@color/blue"
                    android:textSize="17dp"
                    android:hint="Used Water"
                    android:textColorHint="@color/blue"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/nextPouring"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext"
                    android:textColor="@color/blue"
                    android:textSize="17dp"
                    android:hint="Unknown"
                    android:textColorHint="@color/blue"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/plantUsedWater"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext"
                    android:textColor="@color/blue"
                    android:textSize="17dp"
                    android:hint="Used water"
                    android:textColorHint="@color/blue"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginLeft="80dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Automatical pouring"
                    android:fontFamily="@font/tt_corals_thin_demo"
                    android:textColor="@color/blue"
                    android:textSize="20dp"
                    />

                <CheckBox
                    android:id="@+id/autoPouring"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:buttonTint="@color/aqua"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/pourButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/button"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                android:text="       Pour the plant"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:drawableRight="@drawable/right_arrow_button"

                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>