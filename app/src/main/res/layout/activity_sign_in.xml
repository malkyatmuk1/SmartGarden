<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Start"
    android:orientation="vertical"
    android:gravity="fill_vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="top"
        android:layout_marginTop="10dp"
        >


        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"

            >

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="40dp"
                android:background="@color/white"

                android:src="@drawable/left_arrow_aqua" />

            <ImageButton
                android:id="@+id/ipButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="40dp"
                android:background="@color/white"
                android:foregroundGravity="right"

                android:src="@drawable/ip" />
        </RelativeLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Start"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:fontFamily="@font/tt_corals_thin_demo"
        android:textColor="@color/aqua"
        android:textSize="40dp"
        android:layout_gravity="center_horizontal" />
    <View
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@drawable/gradient_blue_green"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just one step Left \n to your Garden"
        android:textColor="@color/greyText"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/titillium_weblight"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/incorrectUserOrPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/titillium_weblight"
        android:visibility="visible"
        android:textSize="15dp"/>
    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittext"
        android:hint="User Name"
        android:textColorHint="@color/blue"
        android:textColor="@color/blue"
        android:textSize="15dp"
        android:paddingLeft="30dp"
        android:fontFamily="@font/titillium_weblight"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittext"
        android:hint="Password"
        android:textColorHint="@color/blue"
        android:inputType="textPassword"
        android:textColor="@color/blue"
        android:textSize="15dp"
        android:paddingLeft="30dp"
        android:fontFamily="@font/titillium_weblight"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/SignInButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:drawableRight="@drawable/right_arrow_button"
        android:paddingRight="20dp"
        android:text="Sign in"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textAlignment="gravity"
        android:textAllCaps="false" />
    <TextView
        android:id="@+id/createNewAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Create an account? Sign up"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />
</LinearLayout>
</LinearLayout>