<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Start"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <ImageButton android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:src="@drawable/left_arrow_button"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textAllCaps="true"
        android:fontFamily="@font/tt_corals_thin_demo"
        android:textColor="@color/aqua"
        android:textSize="40dp"
        android:layout_gravity="center_horizontal"
        />

    <View
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@drawable/gradient_blue_green"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give us some Valuable \n information"
        android:textColor="@color/greyText"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="150dp"
        android:fontFamily="@font/titillium_weblight"
        android:textSize="20dp"

        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittext"
        android:text="Email"
        android:textColor="@color/blue"
        android:textSize="15dp"
        android:paddingLeft="30dp"
        android:fontFamily="@font/titillium_weblight"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittext"
        android:text="Contact Number"
        android:textColor="@color/blue"
        android:textSize="15dp"
        android:paddingLeft="30dp"
        android:fontFamily="@font/titillium_weblight"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Forgot Password?"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginRight="70dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:drawableRight="@drawable/right_arrow_button"
        android:paddingRight="20dp"
        android:text="Sign in"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Create an account? Sign up"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
</LinearLayout>