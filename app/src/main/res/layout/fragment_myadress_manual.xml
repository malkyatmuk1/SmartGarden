<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myaddress_background"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:id="@+id/fragment_address"
    tools:context=".MyAddress"
    >

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/hand"
        android:textColor="@color/greyText"
        android:textSize="15dp"
        android:textStyle="bold"
        android:paddingLeft="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="IP settings"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_white"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="IP"
        android:inputType="numberDecimal"
        android:digits="0123456789."
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:layout_gravity="center_horizontal"
        android:text="Apply"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/titillium_weblight"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textStyle="bold"/>

</LinearLayout>